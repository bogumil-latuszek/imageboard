@page
@model imageboard.Pages.Gallery

@{
    ViewData["Title"] = "Image Gallery";
}

<div class="container">
    <h1 class="mb-4">Image Gallery</h1>
    
    <!-- Search Form -->
    <form method="get" class="mb-4">
        <div class="input-group">
            <input type="text" 
                   class="form-control" 
                   name="search" 
                   placeholder="Search by title, description, or tags..."
                   value="@Model.SearchTerm">
            <button class="btn btn-primary" type="submit">
                <i class="bi-search"></i> Search
            </button>
            @if (!string.IsNullOrEmpty(Model.SearchTerm))
            {
                <a href="/Gallery" class="btn btn-outline-secondary">Clear Search</a>
            }
        </div>
    </form>
    
    <!-- Search Results Summary -->
    @if (!string.IsNullOrEmpty(Model.SearchTerm))
    {
        <div class="alert alert-info">
            Found @Model.TotalImages images for "<strong>@Model.SearchTerm</strong>"
        </div>
    }
    
    <!-- Image Grid -->
    @if (Model.Images.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
            @foreach (var image in Model.Images)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <!-- Image Thumbnail -->
                        <div class="card-img-top position-relative" 
                             style="height: 200px; overflow: hidden; background-color: #f8f9fa;">
                            <div class="position-absolute top-50 start-50 translate-middle text-muted">
                                <i class="bi-image" style="font-size: 3rem;"></i>
                            </div>
                            <!-- In real app, this would be an actual image -->
                            <div class="position-absolute bottom-0 start-0 p-2">
                                <span class="badge bg-dark">@image.FileName</span>
                            </div>
                        </div>
                        
                        <div class="card-body">
                            <!-- Title -->
                            <h5 class="card-title">@image.Title</h5>
                            
                            <!-- Description -->
                            <p class="card-text text-muted small">@image.Description</p>
                            
                            <!-- Tags -->
                            <div class="mb-2">
                                @foreach (var tag in image.Tags.Take(3))
                                {
                                    <a href="/Gallery?search=@tag" 
                                       class="badge bg-secondary text-decoration-none me-1">
                                        @tag
                                    </a>
                                }
                                @if (image.Tags.Count > 3)
                                {
                                    <span class="badge bg-light text-dark">+@(image.Tags.Count - 3) more</span>
                                }
                            </div>
                            
                            <!-- Metadata -->
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="bi-person"></i> @image.Uploader
                                </small>
                                <small class="text-muted">
                                    <i class="bi-calendar"></i> @image.UploadDate.ToString("MMM dd")
                                </small>
                            </div>
                        </div>
                        
                        <div class="card-footer bg-transparent">
                            <div class="d-grid gap-2">
                                <a href="#" class="btn btn-outline-primary btn-sm">
                                    <i class="bi-eye"></i> View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <!-- Empty State for No Images -->
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi-images" style="font-size: 4rem; color: #dee2e6;"></i>
            <h3 class="mt-3">No images found</h3>
            <p class="text-muted">
                @if (string.IsNullOrEmpty(Model.SearchTerm))
                {
                    <span>The gallery is empty. <a href="/Upload">Upload the first image!</a></span>
                }
                else
                {
                    <span>No images match your search. <a href="/Gallery">View all images</a></span>
                }
            </p>
        </div>
    }
    
    <!-- Upload Call-to-Action -->
    <div class="mt-5 text-center">
        <a href="/Upload" class="btn btn-success btn-lg">
            <i class="bi-cloud-upload"></i> Upload Your Own Image
        </a>
    </div>
</div>

